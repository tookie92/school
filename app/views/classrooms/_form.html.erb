<%= simple_form_for(@classroom) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom, required: true %>
    <%= f.input :user, :collection => User.where(role_id: 4), :label_method => :nom, :value_method => :id, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
